 <div class="card">
  <div class="card-header">
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4"><%= @friend.first_name %> <%= @friend.last_name %></p>
        <p class="subtitle is-6 mb-3"><%= @friend.twitter %></p>
      </div>
    </div>
  </div>
  <div class="card-content">
    <p class="title">
      Lorem ipsum dolor sit amet, consectetur adipiscing elit.
      Phasellus nec iaculis mauris.
    </p>
    <p class="subtitle">
      <%= @friend.email %> |
      <%= @friend.country %>
    </p>
  </div>
  <footer class="card-footer">
    <p class="card-footer-item">
      <%= link_to 'Edit', edit_friend_path(@friend), class: "button is-warning mt-5" %>
    </p>
    <p class="card-footer-item">
      <%= link_to 'Back', friends_path, class: "button is-primary mt-5 ml-3" %>

    </p>
  </footer>
</div>

